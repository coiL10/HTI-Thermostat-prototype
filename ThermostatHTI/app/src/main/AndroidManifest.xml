<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.tue.thermostathti">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_overview"
            android:label="@string/title_activity_week_overview"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_monday"
            android:label="Monday"
            android:parentActivityName=".week_overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_tuesday"
            android:label="Tuesday"
            android:parentActivityName=".week_overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_wednesday"
            android:label="Wednesday"
            android:parentActivityName=".week_overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_thursday"
            android:label="Thursday"
            android:parentActivityName=".week_overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_friday"
            android:label="Friday"
            android:parentActivityName=".week_overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_saturday"
            android:label="Saturday"
            android:parentActivityName=".week_overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
        <activity
            android:name=".week_sunday"
            android:label="Sunday"
            android:parentActivityName=".week_overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.tue.thermostathti.MainActivity" />
        </activity>
    </application>

</manifest>